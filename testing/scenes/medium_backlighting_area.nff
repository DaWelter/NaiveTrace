v
from -100 0 0
at 0 0 0
up 0 1 0
resolution 100 100
angle 1

# Invisible shader uses a delta-peaked btdf.
# Therefore NEE does not work on the medium
# boundary.
# Consequently, I have to make the light source
# large enough to be hit by random rays from 
# scattering in the medium.
{
transform -101 0 0 0 0 0 1 1000 1000
larea arealight1 uniform 1. 1. 1. 1
shader black
p 4
0 1 -1
0 1 1
0 -1 1
0 -1 -1
larea none
}

shader invisible
medium prettydense 10 0
transform 0 0 0 0 0 0 1 1 1
m unitcube.dae
